#include<stdio.h>
int main(){
    int num,sum=0,base=1;
    printf("Enter Binary Number: ");
    scanf("%d",&num);
    int temp = num;
    while(num!=0){
        int rem = num%10;
            sum = sum + rem*base;
            base*=2;
            num = num/10;
    }
    printf("Decimal of %d is %d", temp,sum);
    return 0;
}
